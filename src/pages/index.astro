---
import Layout from '../layouts/Layout.astro';
import { ArrowUpRight, LogoGithub, Email, SendAlt, Education, ArrowRight } from '@carbon/icons-react';
import mvtp from '../assets/mvtp.svg';
import incu from '../assets/incu.png';
import smartcar from '../assets/smartcar.png';
import tpcap from '../assets/tpcap-logo.png';
import { Image } from 'astro:assets';

const projects = await Astro.glob('../pages/projects/*.md');
---

<Layout title="Yakun Ouyang">
	<div class="grid grid-cols-4 grid-rows-2 gap-x-8">
		<h2 class="col-start-2 col-span-2 text-xl font-medium">Hi there, I'm Yakun Ouyang (Ê¨ßÈò≥‰∫öÂù§) üëã</h2>
		<p class="col-start-2 row-span-2 col-span-2">I'm a Senior Engineer at <a href="https://www.apollogo.com/" target="_blank">Baidu Apollo</a>, working on Interactive Decision Making for autonomous driving robotaxis.</p>
		<p class="col-start-2 row-span-2 col-span-2">I did my M.E. in Mechanical Engineering at Hunan University, under the supervision of Prof. <a href="https://scholar.google.com/citations?user=NB55MIQAAAAJ" target="_blank">Bai Li</a>.</p>
		<div class="row-span-2 row-start-1 col-start-4">
			<img src="/memoji_wink.png" class="w-12 float-right rounded-full bg-zinc-100 p-2" />
		</div>
	</div>

	<div class="grid grid-cols-4 gap-x-8 mt-8">
		<div class="col-start-2 text-xs">
			<div class="font-medium mb-2">Interests</div>
			<div>Autonomous Driving</div>
			<div>Multi-Agent System</div>
			<div>Robotics</div>
		</div>

		<div class="text-xs col-span-2">
			<div class="font-medium mb-2">Education</div>
			<div>M.E. in Mechanical Engineering, Hunan University</div>
			<div>B.E. in Automation, Nanchang University</div>
		</div>
	</div>

	<div class="grid grid-cols-4 mt-12 gap-8">
		<h3 class="border-t-2 border-current pt-1 font-medium sticky top-4 h-8">Research</h3>
		<div class="col-span-3 flex flex-col gap-y-4">
			<a href="test" class="group no-underline">
				<div class="col-span-3 p-4 item-img">
					<img src={mvtp.src} width={mvtp.width} height={mvtp.height} alt="mvtp" />
				</div>
				<div class="col-span-3">
					<div class="text-l flex items-center mt-4">
						Trajectory Planning for Multiple Vehicles <ArrowRight className="ml-1 w-5 h-5 group-hover:translate-x-1 transition-transform" />
					</div>
				</div>
			</a>
		</div>
	</div>

	<div class="grid grid-cols-4 mt-12 gap-8">
		<h3 class="col-start-1 border-t-2 border-current pt-1 font-medium sticky top-4 h-8">Projects</h3>
		<div class="grid col-span-3 grid-cols-3 gap-8">
			<a href="test" class="no-underline group row-span-2 gap-y-4">
				<div class="item-img">
					<Image src={incu} alt="incu" />
				</div>
				<div class="mt-4">
					<div class="text-l flex items-center">
						iNCU <ArrowRight className="ml-1 w-5 h-5 group-hover:translate-x-1 transition-transform" />
					</div>
				</div>
			</a>

			<a href="#" class="gap-y-4 group no-underline">
				<div class="item-img">
					<Image src={smartcar} alt="startcar" />
				</div>
				<div class="mt-4">
					<div class="text-l flex items-center">
						SmartCar Competition <ArrowRight className="ml-1 w-5 h-5 group-hover:translate-x-1 transition-transform" />
					</div>
				</div>
			</a>

			<a href="test" class="no-underline group gap-y-4">
				<div class="item-img p-8">
					<Image src={tpcap} alt="tpcap" />
				</div>
				<div class="mt-4">
					<div class="text-l flex items-center">
						TPCAP <ArrowRight className="ml-1 w-5 h-5 group-hover:translate-x-1 transition-transform" />
					</div>
				</div>
			</a>
		</div>
	</div>

	<div class="grid grid-cols-4 mt-12 gap-8">
		<h3 class="col-start-1 border-t-2 border-current pt-1 font-medium sticky top-4 h-8">Contact</h3>
		<div class="grid grid-cols-2 gap-8">
			<a href="https://github.com/yakunouyang" class="group relative flex flex-col justify-between h-24">
				<LogoGithub className="w-4 h-4" />
				<div>Github</div>
				<ArrowUpRight className="absolute bottom-0 right-0 w-5 h-5 group-hover:translate-x-1 group-hover:-translate-y-1 transition-transform" />
			</a>
			<a href="https://scholar.google.com/citations?user=RI23DrEAAAAJ" class="group relative flex flex-col justify-between h-24">
				<svg class="w-4 h-4" viewBox="0 0 1024 1024" version="1.1" xmlns="http://www.w3.org/2000/svg" width="200" height="200"><path d="M747.467894 208.576566c9.546761 21.841558 15.872 47.720212 15.872 78.261239 0 92.314053-53.31823 135.974513-106.63646 177.090832-16.565239 16.239009-35.595327 33.683257-35.595328 61.140956 0 27.455434 19.027823 42.455221 33.001345 53.639929l45.710726 34.920213c55.916743 46.141168 106.711221 88.603186 106.711221 174.650902C806.531398 905.537699 690.921345 1024 472.467257 1024c-184.170478 0-273.040991-86.054513-273.040992-178.366301 0-44.899681 22.876885-108.482832 97.803328-152.177274 78.682619-47.380389 185.466336-53.605947 242.556602-57.355328-17.761416-22.471363-38.062442-46.213664-38.062443-84.815292 0-21.227611 6.325239-33.683257 12.668602-48.649062-13.978053 1.236956-27.919858 2.473912-40.631504 2.473912-134.63108 0-210.860177-98.539611-210.860177-195.806018 0-5.688637 0.262796-11.440708 0.788389-17.229026H64.566372L360.176142 0H959.433628l-49.324177 48.535788v84.135646c10.824496 6.261805 18.10577 17.963044 18.10577 31.365663V453.709027c0 19.997451-16.211823 36.209274-36.21154 36.209274-20.001982 0-36.213805-16.211823-36.213805-36.209274V164.037097c0-13.402619 7.281274-25.103858 18.10577-31.365663V84.169628l-126.427752 124.406938z m-164.474336 463.683965c-10.24-1.239221-16.540319-1.239221-29.184-1.239221-11.454301 0-80.044177 2.480708-133.360142 19.92269-27.962903 10.013451-109.239504 39.913345-109.239504 128.507469 0 88.564673 87.579186 152.145558 223.542371 152.145558 121.95115 0 186.653451-57.316814 186.653452-134.660531 0.004531-63.660177-41.870726-97.307186-138.414443-164.675965z m36.814159-236.997097c29.261027-28.692389 31.784779-68.637451 31.784779-91.072567 0-89.803894-54.652602-229.525522-160.027186-229.525522-33.008142 0-68.603469 16.205027-88.952071 41.186549-21.583292 26.218478-27.922124 59.867752-27.922124 92.277805 0 83.573805 49.500885 222.09246 158.769841 222.09246 31.737204 0 65.959646-14.997522 86.349026-34.958725